<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.moquapps.android.instacheck.TipActivity" >

    <TextView
        android:id="@+id/textViewP1P2Values"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"    
        android:textColor="#ffffff" 
        android:textStyle="bold"   
        android:background="#000000"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="18dp"        
        android:text="  (P1 = xx.xx  |  P2 = yy.yy)" />        
    
    <!-- Line -->
    <View    
       android:id="@+id/viewTipLine"
       android:layout_marginTop="60dp"
       android:layout_width="fill_parent"
       android:layout_height="2dp"
       android:background="#0000ff"     
    />
    
    <TextView
        android:id="@+id/textViewSeekBarProgressValue"
        android:layout_below="@+id/viewTipLine"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Tip: 15%" />  
        
    <SeekBar 
        android:id="@+id/seekBarTipPercentage"        
        android:layout_below="@+id/textViewSeekBarProgressValue"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="#AAEAED" 
                                     />
        <!-- android:progress="15" -->
     <TextView
        android:id="@+id/textViewSeekBarAction"
        android:layout_below="@+id/seekBarTipPercentage"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="normal"
        android:text="\u0020 0%\u0020\u0020\u0020\u0020\u0020\u0020\u0020\u0020\u0020 5% \u0020\u0020\u0020\u0020\u0020\u0020\u0020 10% \u0020\u0020\u0020\u0020\u0020\u0020\u0020 15% \u0020\u0020\u0020\u0020\u0020\u0020\u0020 20% \u0020\u0020\u0020\u0020\u0020\u0020 25% \u0020\u0020\u0020\u0020\u0020 30% . . ."
     />   

   <!--Ref. invisible-vertical-center-Line for TipSplit Line below-->
   <View    
      android:id="@+id/viewMidLine"
      android:layout_width="fill_parent"
      android:layout_height="0dp"
      android:layout_centerVertical="true"
      android:layout_marginTop="1dp"
      android:background="#000000"     
   /> 
   
   <!-- Line -->
   <View    
      android:id="@+id/viewTipSplitLine"
      android:layout_below="@+id/viewMidLine"
      android:layout_marginTop="30dp"
      android:layout_width="fill_parent"
      android:layout_height="2dp"
      android:background="#0000ff"     
   />
   
   <TextView
       android:id="@+id/textViewTipSplitLabel"
       android:layout_below="@+id/viewTipSplitLine"
       android:layout_marginTop="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="20sp"       
       android:textStyle="bold" 
       android:text="Tip Split" />
    
    <RadioGroup 
       android:id="@+id/radioGroupTipSplit"
       android:layout_below="@+id/textViewTipSplitLabel"
       android:layout_marginTop="20dp"
       android:orientation="horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" >
       <RadioButton 
           android:id="@+id/radioButtonEqualSplit"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Equal Split"
           android:checked="true"    />
        <RadioButton 
           android:id="@+id/radioButtonPropSplit"
           android:layout_marginLeft="38dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Propotional Split"  />      
    </RadioGroup>
   
    <Button
       android:id="@+id/btnNext"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/radioGroupTipSplit"
       android:layout_marginLeft="220dp"
       android:layout_marginTop="42dp"
       android:onClick="onClickTipActivityNextBtn"       
       android:text="Next" />

</RelativeLayout>
