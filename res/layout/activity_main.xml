<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/notepad_margin"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/TablePad"
        android:background="@color/yellow1"
        android:padding="@dimen/notepad_margin" >

        <ImageView
            android:id="@+id/imageView1"
            android:contentDescription="@string/iDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/cameraiconmd" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/imageView1"
            android:layout_below="@+id/imageView1"
            android:layout_marginTop="64dp"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/button2"
            style="@style/ButtonText"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="31dp"
            android:background="@drawable/redbutton"
            android:text="@string/instStr" />
    </RelativeLayout>

</LinearLayout>